{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "traceResolution": false,
        "target": "es6",
        "outDir": "dist",
        "alwaysStrict": false
    },
    "include": [
        "tractorPull.ts",
        "interfaces/**/*",
        "models/**/*",
        "templates/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "baseUrl": "./"
}