{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "index.js",
        "sourceMap": true,
        "declaration": true,
        "traceResolution": false,
        "target": "es6"
    },
    "include": [
        "tractorPull.ts",
        "interfaces/**/*",
        "models/**/*",
        "templates/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "baseUrl": "./"
}